{
  "name": "pc_timer",
  "version": "1.0.0",
  "description": "PC程序使用时间统计工具",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "start": "npm run build && npm run start:built",
    "start:dev": "cross-env NODE_ENV=development concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:renderer": "cross-env NODE_ENV=development webpack serve --config webpack.config.js --port 3000",
    "start:electron": "cross-env NODE_ENV=development electron .",
    "start:built": "cross-env NODE_ENV=production electron .",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "build:electron": "npm run build && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "rebuild": "electron-rebuild"
  },
  "build": {
    "productName": "PC Timer",
    "appId": "com.pctimer.app",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "electron",
    "pc",
    "timer",
    "usage",
    "statistics"
  ],
  "author": "PC Timer Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "wait-on": "^7.2.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
